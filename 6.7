import math

class Circle:
    def __init__(self, radius):
        # Khởi tạo bán kính hình tròn
        self.radius = radius

    def area(self):
        # Tính diện tích hình tròn (πr²)
        return math.pi * (self.radius ** 2)

    def circumference(self):
        # Tính chu vi hình tròn (2πr)
        return 2 * math.pi * self.radius

# Sử dụng lớp Circle để tính diện tích và chu vi
radius = float(input("Nhập bán kính của hình tròn: "))

# Tạo đối tượng Circle
circle = Circle(radius)

# Tính diện tích và chu vi và in ra kết quả
print(f"Diện tích của hình tròn: {circle.area():.2f}")
print(f"Chu vi của hình tròn: {circle.circumference():.2f}")
